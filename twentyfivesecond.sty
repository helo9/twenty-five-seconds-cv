	\coordinate (PSE) at (current page.south east);
	\fill [\cvcolor, inner sep=0pt, outer sep=0pt] ($(PSW) + (\outermargin, \outermargin+\footheight)$) rectangle ($(PSE) +(-\outermargin, \outermargin)$){};
